{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-prettier/recommended",
        "stylelint-config-idiomatic-order"
    ],
    "plugins": [
        "stylelint-order",
        "stylelint-scss",
        "stylelint-prettier"
    ],
    "rules": {
        "selector-class-pattern": null,
        "prettier/prettier": [
            true,
            {
                "singleQuote": true,
                "semi": false,
                "endOfLine": "auto"
            }
        ]
    }
}